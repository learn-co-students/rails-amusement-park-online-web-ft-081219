<h1><%= @attraction.name%></h1>
<%= @attraction.min_height%>
<%= @attraction.happiness_rating%>
<%= @attraction.nausea_rating%>
<%= @attraction.tickets%>

<% if @user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end%>

<%= form_for @ride do |f|%>
    <input type = "hidden" name = "ride[attraction_id]" value = "<%=@attraction.id%>">
     <input type = "hidden" name = "ride[user_id]" value = "<%=@user.id%>">
    <%=f.submit "Go on this ride"%>
<% end %>