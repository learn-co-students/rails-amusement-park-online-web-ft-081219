<h1>New User</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
        <h3>
            <%= pluralize(@user.errors.count, "error") %>
            prohibited this user from being saved:
        </h3>
        <ul>
            <% @user.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for :user do |f| %>
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name %><br>
    
    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.number_field :height %><br>
    
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness %><br>
    
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea %><br>
    
    <%= f.label :tickets, "How many tickets do you have?" %><br>
    <%= f.number_field :tickets %><br>

    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %><br>

    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password %><br>

    <%= f.submit "Create User" %>

<% end %>